<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F9FA"
    tools:context=".ui.activities.SupportActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_190sdp"
        android:background="@drawable/support_details"
        android:elevation="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20"
        app:layout_constraintVertical_bias="0.458">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="رقم جوال"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/imageView22"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="+9725698711400"
            android:textColor="#B823253A"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintRight_toLeftOf="@+id/imageView22"
            app:layout_constraintTop_toBottomOf="@+id/textView47" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView53"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="يمكنك التواصل مع الدعم الفني عن طريق الايميل او رقم الجوال سيتم الرد في اقرب وقت ممكن ..."
            android:textColor="#B823253A"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintRight_toLeftOf="@+id/imageView23"
            app:layout_constraintTop_toBottomOf="@+id/textView49" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="Support@otlob.com"
            android:textColor="#B823253A"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintRight_toLeftOf="@+id/imageView25"
            app:layout_constraintTop_toBottomOf="@+id/textView53" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView50"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="يسعدنا الرد على أسئلتك وخدمة عملائنا بالبريد."
            android:textColor="#000000"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintRight_toLeftOf="@+id/imageView25"
            app:layout_constraintTop_toBottomOf="@+id/textView54" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="ساعات عمل خط الدعم"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/imageView23"
            app:layout_constraintTop_toBottomOf="@+id/textView52" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_call_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_brightness_1_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView52" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView53" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="الدعم الفني"
        android:textColor="#23253A"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:tint="#23253A"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView51"
        app:srcCompat="@drawable/ic_baseline_support_24"
        app:tint="#C6C6C6"
        tools:ignore="VectorDrawableCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>
