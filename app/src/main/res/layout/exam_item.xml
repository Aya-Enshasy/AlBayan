<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/search"
    android:elevation="@dimen/_3sdp"
    android:outlineSpotShadowColor="#BFBFBF"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:paddingBottom="@dimen/_12sdp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mosque" />

    <TextView
        android:id="@+id/tv_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cairo_bold"
        android:text="الدرجة:"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_mosque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cairo_bold"
        android:text="اسم المسجد : "
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_exam" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_exam"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
         android:scaleType="fitXY"
        android:src="@drawable/group_4041"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         app:shapeAppearanceOverlay="@style/rounded" />

</androidx.constraintlayout.widget.ConstraintLayout>